{
  "logging": {
    "logs": {
      "default": {
        "level": "debug"
      }
    }
  },
  "apps": {
    "tls": {
    },
    "http": {
      "servers": {
      	"srv8585": {
          "automatic_https": {
            "disable": true
          },
          "logs": {
	  	  },
          "listen": [
            ":8585"
          ],
		  "routes": [
            {
              "match": [
                {
                  "path": [
                    "/*"
                  ]
                }
              ],
              "handle": [
                        {
                           "handler":"prometheus",
                           "metrics_path":"/metrics"
                        },
                        {
                           "handler":"samlprovider",
                           "session_header_name":"session",
                           "session_expiry_hours":"6",
                           "mongo_host":"mongo",
                           "mongo_db":"samlsp",
                           "audience_restriction":"echo-kitcaddy",
                           "idp_metadata_url":"https://keycloak.test01.kitkube.dk/auth/realms/nemid/protocol/saml/descriptor",
                           "entityId":"echo-kitcaddy",
                           "sign_authn_req":"false",
                           "sign_cert_file":"/sp/sp.cer",
                           "sign_key_file":"/sp/sp.pem",
                           "external_url":"http://localhost",
                           "metadata_path":"/saml/metadata",
                           "logout_path":"/saml/logout",
                           "slo_path":"/saml/SLO",
                           "sso_path":"/saml/SSO",
                           "logout_landing_page":"",
                           "cookie_domain":"",
                           "cookie_path":"/",
                           "sessiondata_headername":"sessiondata"
                        },
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "read_buffer_size": 4096
                  },
                  "upstreams": [
                    {
                      "dial": "echo:80"
                    }
                  ]
                }
              ]
            }
          ]
		}
      }
    }
  }
}
